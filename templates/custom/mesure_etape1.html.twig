{% extends "layout.html.twig" %}
{% block title 'Prise de mesure' %}

    {% block content %}
        <label>Etape suivante ! </label>
        <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:30%;">30%</div>
        </div>
        <h1>Mesurez votre poids et votre taille</h1>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-md-8 col-lg-8">
                    <form method="post">
                        <div class="form-group">
                            <label>Votre taille</label>
                            <input type="value" name="taille" value="{#{{ user.taille }}#}" class="form-control" placeholder="Merci de renseigner votre taille en cm">
                        </div>
                        <div class="form-group">
                            <label>Votre poids</label>
                            <input type="value" name="poids" value="{#{{ user.poids }}#}" class="form-control" placeholder="Merci de renseigner votre poids en kilogrammes">
                        </div>
                        <button type="submit" class="btn btn-primary">Passez à l'étape suivante</button>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-4 col-lg-4">
                    {#rajouter les liens de la config et des mesures prises au fur et à mesure#}


                </div>
            </div>
        </div>
    {% endblock %}